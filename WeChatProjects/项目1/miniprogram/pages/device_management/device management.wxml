<view class="search">
  <input type="text" class="search-input" bindinput="input" value="{{input_text}}" > </input>
  <view class="search-right" bindtap="search">
    <image src="./image/search_.png" class="search-img" ></image>
  </view>
</view>   
<view class="banner">
  <view class="banner_row" wx:for="{{devics_list}}"  wx:for-index="idx" id="{{idx}}"  bindtap="detail">
    <image class="banner_row_left" src="./image/xianshi.png"></image>
      <text class="banner_row_text">{{item.name}}</text>
      <view class="banner_row_end">
      <span class="banner_row_text2">{{item.deviceType}} </span>
    <image class="banner_row_right" src="./image/right.png"></image>
  </view>
  </view>
</view>
