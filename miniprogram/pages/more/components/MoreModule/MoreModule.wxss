.container {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 1030rpx;
    height: 220rpx;
    background-color: #fff;
    padding: 0 20rpx;
    box-sizing: border-box;
    font-size: 29rpx;
    letter-spacing: 1rpx;
    color: black;
    background-color: rgb(244,244,244);
}

.first {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 160rpx;
    height: 200rpx;
    background-color: pink;
    border-radius: 15rpx;
    background-image: linear-gradient( 135deg, #FFD3A5 10%, #FD6585 100%);
}

.second {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin-left: 20rpx;
    width: 810rpx;
    height: 200rpx;
}

.second .second_box {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 250rpx;
    height: 90rpx;
    background-color: green;
    border-radius: 15rpx;
    margin: 0 20rpx 20rpx 0
}

.second .note {
    background-image: linear-gradient( 135deg, #C2FFD8 10%, #465EFB 100%);

}

.second .game {
    background-image: linear-gradient( 135deg, #F0FF00 10%, #58CFFB 100%);
}

.second .zanju {
    background-image: linear-gradient( 135deg, #E8D07A 10%, #5312D6 100%);
}

.second .tucao {
    background: #1D976C;
    /* fallback for old browsers */
    background: -webkit-linear-gradient(to top, #93F9B9, #1D976C);
    /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(to top, #93F9B9, #1D976C);
    /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

}